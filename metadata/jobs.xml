            <parameter name="osfglobalservices49-alliance-prtnr-na06-dw">app_storefront_custom/cartridge/scripts/job/assignProductByBrand.js</parameter>
        </parameters>
        <flow>
            <context site-id="RefArch"/>
            <step step-id="getByBrand" type="ExecuteScriptModule" enforce-restart="false">
                <description/>
                <parameters>
                    <parameter name="ExecuteScriptModule.Module" job-parameter-ref="osfglobalservices49-alliance-prtnr-na06-dw"/>
                    <parameter name="ExecuteScriptModule.FunctionName">execute</parameter>
                    <parameter name="ExecuteScriptModule.Transactional">false</parameter>
                    <parameter name="brand">shit</parameter>
                </parameters>
            </step>
        </flow>
        <rules/>
        <triggers>
            <run-once enabled="false">
                <date>2020-03-26Z</date>
                <time>07:15:15.000Z</time>
            </run-once>
        </triggers>
