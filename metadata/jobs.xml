<?xml version="1.0" encoding="UTF-8"?>
<jobs xmlns="http://www.demandware.com/xml/impex/jobs/2015-07-01">
    <job job-id="exportCatalog" priority="0">
        <description>Export the catalog</description>
        <parameters/>
        <flow>
            <context site-id="Sites"/>
            <step step-id="exportMainCatalog" type="ExportCatalog" enforce-restart="false">
                <description>Exports main catalog</description>
                <parameters>
                    <parameter name="CatalogID">storefront-catalog-m-en</parameter>
                    <parameter name="ExportCategories">true</parameter>
                    <parameter name="ExportProducts">true</parameter>
                    <parameter name="ExportCategoryAssignments">true</parameter>
                    <parameter name="ExportProductOptions">true</parameter>
                    <parameter name="ExportRecommendations">true</parameter>
                    <parameter name="ExportVariationAttributes">true</parameter>
                    <parameter name="FileNamePrefix">rares</parameter>
                    <parameter name="OverwriteExportFile">true</parameter>
                </parameters>
            </step>
        </flow>
        <rules/>
        <triggers>
            <run-once enabled="false">
                <date>2020-03-25Z</date>
                <time>15:12:47.000Z</time>
            </run-once>
        </triggers>
    </job>

    <job job-id="AssignByBrand" priority="0">
