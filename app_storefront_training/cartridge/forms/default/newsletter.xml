<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
    <field formid="firstName" label="newsletter.label.firstName" type="string" mandatory="true" binding="firstName" max-length="50"/>
    <field formid="lastName" label="newsletter.label.lastName" type="string" mandatory="true" binding="lastName" max-length="50"/>
    <field formid="email" label="newsletter.label.email" type="string" mandatory="true" regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
        parse-error="newsletter.email.value-error" value-error="newsletter.email.value-error" binding="email" max-length="50"/>
    <action formid="subscribe" valid-form="true"/>
</form>
